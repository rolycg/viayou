@using ViaYou.Web.Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ViaYou</title>

    @Styles.Render("~/Content/Shared/css")
    @Styles.Render("~/Content/BasicTemplate/css")

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("specific_styles", required: false)

</head>
<body>

    @Html.Partial("_HeaderAndMenu")

    @RenderBody()

    @Html.Partial("_Footer")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")


    @Scripts.Render("~/Scripts/BasicTemplate/js")

    @RenderSection("scripts", required: false)
</body>
</html>
