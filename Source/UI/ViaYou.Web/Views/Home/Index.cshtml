@using System.Collections.Concurrent
@using ViaYou.Web.Resources


<header>
    <div class="header-content">
        <div class="header-content-inner">
            <h1>@ResourceLanguage.Offer_A_Deliver_Header</h1>
            <hr>
            <p>@ResourceLanguage.Offer_A_Deliver_Text</p>
            <a href="#searchTravels" class="btn btn-primary btn-xl page-scroll"><i class="fa fa-search"></i> Start Search</a>
        </div>
    </div>
</header>



<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">At Your Service</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-users wow bounceIn text-primary"></i>
                    <h3>Advice for Clients</h3>
                    <p class="text-muted">Our templates are updated regularly so they don't break.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-paper-plane wow bounceIn text-primary" data-wow-delay=".1s"></i>
                    <h3>Advice for the traveler</h3>
                    <p class="text-muted">You can use this theme as is, or you can make changes!</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-question-circle wow bounceIn text-primary" data-wow-delay=".2s"></i>
                    <h3>FAQ</h3>
                    <p class="text-muted">We update dependencies to keep things fresh.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="searchTravels" class="bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@ResourceLanguage.Label_Message_Find_Connection</h2>
