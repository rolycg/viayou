@using ViaYou.Web.Resources
<div class="row">
    <div class="col-sm-5 padding-right col-sm-offset-4">
            <!--features_items-->
            <div class="page-header">
                <h2 class="text-center"><small>@ResourceLanguage.Label_Index_Message_Header</small></h2>
            </div>

            <form class="form-horizontal">
                <div class="col-md-8 col-md-offset-2">
                    <p class="text-center" style="color: #5CB85C; font-size: 18px; font-weight: bold">@ResourceLanguage.Label_Message_Find_Connection</p>
                    
                    <div class="form-group">
                        <label for="from" class="col-md-2 control-label">From</label>
                        <div class="col-md-10">
                            <input type="text" id="from" class="form-control" placeholder="From">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="to" class="col-md-2 control-label">To</label>
                        <div class="col-md-10">
                            <input type="text" id="to" class="form-control" placeholder="To">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="to" class="col-md-2 control-label">Date</label>
                        <div class="col-md-10">
                            <div class="input-group date form_datetime" data-date-format="dd MM yyyy">
                                <input class="form-control" size="16" type="text" readonly>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                        </div>
                    </div>

                    <a class="btn btn-success pull-right"> <i class="fa fa-search"></i> Search</a>
                </div>
            </form>
        </div>
</div>
@section scripts
{
    <link href="~/Content/bootstrap-datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-datetimepicker/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.form_datetime').datetimepicker({
                weekStart: 0,
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                forceParse: 0,
                minView: 2
            });
        });
    </script>
}
