@using System.Collections.Concurrent
@using ViaYou.Web.Resources
<div class="row">
    <div class="col-md-5">
        <div class="alert alert-info">
            <ol>
                <li> <a href="">Advices for clients</a></li>
                <li> <a href="">Advices for the travelers</a></li>
                <li> <a href="">FAQ</a></li>
            </ol>

            <h4 class="text-center">FILTERS</h4>
            <div class="row">
                <div class="col-md-6">
                    <p class="text-center">Category:</p>
                    @Html.CheckBox("Categ1", "Categ1")
                    @Html.CheckBox("Categ2", "Categ2")
                    @Html.CheckBox("Categ3", "Categ3")
                    @Html.CheckBox("Categ4", "Categ4")
                    @Html.CheckBox("Categ5", "Categ5")
                </div>
                <div class="col-md-6">
                    <p class="text-center">Contained in:</p>
                    @Html.CheckBox("Categ1", "Categ1")
                    @Html.CheckBox("Categ2", "Categ2")
                    @Html.CheckBox("Categ3", "Categ3")
                    @Html.CheckBox("Categ4", "Categ4")
                    @Html.CheckBox("Categ5", "Categ5")
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="row">
            <!--features_items-->
                <h2 class="text-center">
                    <small>@ResourceLanguage.Label_Index_Message_Header</small>
                </h2>

            <form class="form-horizontal">
                <div class="col-md-8 col-md-offset-2">
                    <p class="text-center" style="color: #059546; font-size: 22px; font-weight: bold">@ResourceLanguage.Label_Message_Find_Connection</p>
                    <div class="well well-sm">
                        <div class="form-group">
                            @*<label for="from" class="col-md-2 control-label">From</label>*@
                            <div class="col-md-12">
                                @Html.TextBox("From", "", new {id = "s2-city-from", @class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label for="to" class="col-md-2 control-label">To</label>*@
                            <div class="col-md-12">
                                @Html.TextBox("To", "", new {id = "s2-city-to", @class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            @*<label for="date" class="col-md-2 control-label">Date</label>*@
                            <div class="col-md-12">
                                <div class='input-group date' id='datetimepicker1'>
                                    <input type='text' class="form-control" placeholder="Date"/>
                                    <span class="input-group-addon">
                                        <span class="fa fa-calendar">
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <a class="btn btn-success btn-lg pull-right"> <i class="fa fa-search"></i> SEARCH</a><br/><br />
                        @*<input type="submit" class="btn btn-success pull-right" value="SEARCH"/>*@
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section specific_styles
{
    <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker/bootstrap-datetimepicker.min.css" />
    <link href="~/Content/select2/select2.css" rel="stylesheet" />
    <link href="~/Scripts/select2/select2-bootstrap.css" rel="stylesheet" />
}
@section scripts
{
    <script src="~/Scripts/select2/select2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {

            var pageSize = 10;
            $('#s2-city-from').select2({
                placeholder: "From....",
                ajax: {
                    //How long the user has to pause their typing before sending the next request
                    quietMillis: 150,
                    //The url of the json service
                    url: '@Url.Action("RetrieveCities", "Home", new { area = ""})',
                    dataType: 'json',
                    //Our search term and what page we are on
                    data: function (term, page) {
                        return {
                            pageSize: pageSize,
                            pageNum: page,
                            searchTerm: term,
                        };
                    },
                    results: function (data, page) {
                        //Used to determine whether or not there are more results available,
                        //and if requests for more data should be sent in the infinite scrolling
                        var more = (page * pageSize) < data.Total;
                        return { results: data.Results, more: more };
                    }
                }
            });
            $('#s2-city-to').select2({
                placeholder: "To...",
                ajax: {
                    //How long the user has to pause their typing before sending the next request
                    quietMillis: 150,
                    //The url of the json service
                    url: '@Url.Action("RetrieveCities", "Home", new { area = ""})',
                    dataType: 'json',
                    //Our search term and what page we are on
                    data: function (term, page) {
                        return {
                            pageSize: pageSize,
                            pageNum: page,
                            searchTerm: term,
                        };
                    },
                    results: function (data, page) {
                        //Used to determine whether or not there are more results available,
                        //and if requests for more data should be sent in the infinite scrolling
                        var more = (page * pageSize) < data.Total;
                        return { results: data.Results, more: more };
                    }
                }
            });
            $('#datetimepicker1').datetimepicker({
                icons: {
                    time: "fa fa-clock-o",
                    date: "fa fa-calendar",
                    up: "fa fa-arrow-up",
                    down: "fa fa-arrow-down"
                },
                format: 'YYYY MMMM DD'
            });
        });
    </script>
}
