@using ViaYou.Web.Resources

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heading">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="heading-content">
                    <h2>@ResourceLanguage.Label_Index_Message_Header</h2>
                    <span>Home / <a href="#">Travels</a></span>
                </div>
            </div>
        </div>
    </div>
</div>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="heading-section">
                    <h2 class="section-heading">@ResourceLanguage.Label_Message_Find_Connection</h2>
                </div>
            </div>
        </div>
        <div class="header-content">
            <form class="form-horizontal">
                <div class="row">
                    <div class="col-md-6">
                        <div class="text-left">
                            <br /><br />
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBox("From", "", new { id = "s2-city-from", @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBox("To", "", new { id = "s2-city-to", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBox("Category", "", new { id = "s2-category", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.TextBox("ContainedIn", "", new { id = "s2-contained", @class = "form-control" })
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-left">
                            <div class="form-group">
                                <div class="col-md-6">
                                    <div class="text-center" id="datetimepicker1"></div>
                                    @*<div class='input-group date' id='datetimepicker1'>
                                            <input type='text' class="form-control" placeholder="Date" />
                                            <span class="input-group-addon">
                                                <span class="fa fa-calendar">
                                                </span>
                                            </span>
                                        </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <a class="btn btn-success btn-lg"> <i class="fa fa-search"></i> SEARCH</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section specific_styles
{
    <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker/bootstrap-datetimepicker.min.css" />
    <link href="~/Content/select2/select2.css" rel="stylesheet" />
    <link href="~/Scripts/select2/select2-bootstrap.css" rel="stylesheet" />
}
@section scripts
{
    <script src="~/Scripts/select2/select2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {

            var pageSize = 10;
            $('#s2-city-from').select2({
                placeholder: "From....",
                ajax: {
                    quietMillis: 150,
                    url: '@Url.Action("RetrieveCities", "Home", new { area = ""})',
                    dataType: 'json',
                    data: function (term, page) {
                        return {
                            pageSize: pageSize,
                            pageNum: page,
                            searchTerm: term,
                        };
                    },
                    results: function (data, page) {
                        var more = (page * pageSize) < data.Total;
                        return { results: data.Results, more: more };
                    }
                }
            });
            $('#s2-city-to').select2({
                placeholder: "To...",
                ajax: {
                    quietMillis: 150,
                    url: '@Url.Action("RetrieveCities", "Home", new { area = ""})',
                    dataType: 'json',
                    data: function (term, page) {
                        return {
                            pageSize: pageSize,
                            pageNum: page,
                            searchTerm: term,
                        };
                    },
                    results: function (data, page) {
                        var more = (page * pageSize) < data.Total;
                        return { results: data.Results, more: more };
                    }
                }
            });
            $('#s2-category').select2({
                placeholder: "Category...",
                ajax: {
                    quietMillis: 150,
                    url: '@Url.Action("RetrieveCategories", "Category", new { area = "Admin"})',
                    dataType: 'json',
                    data: function (term, page) {
                        return {
                            pageSize: pageSize,
                            pageNum: page,
                            searchTerm: term,
                        };
                    },
                    results: function (data, page) {
                        var more = (page * pageSize) < data.Total;
                        return { results: data.Results, more: more };
                    }
                }
            });
            $('#s2-contained').select2({
                placeholder: "Contained in...",
                ajax: {
                    quietMillis: 150,
                    url: '@Url.Action("RetrieveContainedIn", "ContainedIn", new { area = ""})',
                    dataType: 'json',
                    data: function (term, page) {
                        return {
                            pageSize: pageSize,
                            pageNum: page,
                            searchTerm: term,
                        };
                    },
                    results: function (data, page) {
                        var more = (page * pageSize) < data.Total;
                        return { results: data.Results, more: more };
                    }
                }
            });
            $('#datetimepicker1').datetimepicker({
                icons: {
                    time: "fa fa-clock-o",
                    date: "fa fa-calendar",
                    up: "fa fa-arrow-up",
                    down: "fa fa-arrow-down"
                },
                format: 'YYYY MMMM DD',
                inline: true
            });
        });
    </script>
}


